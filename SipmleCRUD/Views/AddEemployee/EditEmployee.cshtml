@model SipmleCRUD.Models.Employee

@using (Html.BeginForm())
{
<div class="container">
    <div class="form-group">
        <label>Eemployee ID:</label>
        @Html.TextBoxFor(x => x.EmployeeID, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Name:</label>
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Father Name:</label>
        @Html.TextBoxFor(x => x.Father_Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Mother Name:</label>
        @Html.TextBoxFor(x => x.Mother_Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>NID:</label>
        @Html.TextBoxFor(x => x.NID, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Present Address:</label>
        @Html.TextBoxFor(x => x.Present_Address, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Permanent Address:</label>
        @Html.TextBoxFor(x => x.Permanent_Address, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Join Date:</label>
        @Html.TextBoxFor(x => x.Join_Date, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Designation:</label>
        @Html.TextBoxFor(x => x.Designation, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Basic Salary:</label>
        @Html.TextBoxFor(x => x.Basic, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Bank A/C No:</label>
        @Html.TextBoxFor(x => x.Bank_A_C_No, new { @class = "form-control" })
    </div>
    <div class="button">
        <button class="btn btn-success">Submit</button>
    </div>
</div>
}