@model List<SipmleCRUD.Models.tblUser>
    <div>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Passeword</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count(); i++)
                {
                <tr>
                    <td>@Model[i].Name</td>
                    <td>@Model[i].Email</td>
                    <td>@Model[i].Password</td>
                    <td>
                        <a href="@Url.Action("Delete",new { id = Model[i].ID})"><i class="glyphicon glyphicon-trash"></i></a>
                        <a href="@Url.Action("Edit",new { id = Model[i].ID})"><i class="glyphicon glyphicon-pencil"></i></a>
                    </td>
                </tr>
                }

            </tbody>
        </table>
    </div>
